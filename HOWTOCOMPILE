	cp config-686-pae .config
	make -j9 deb-pkg LOCALVERSION=-686-pae KDEB_PKGVERSION=4.1.7-custom

586
	cp config-586 .config
	make -j9 deb-pkg LOCALVERSION=-586 KDEB_PKGVERSION=4.1.7-custom

486
	cp config-486 .config
	make -j9 deb-pkg LOCALVERSION=-486 KDEB_PKGVERSION=4.1.7custom






